<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/black_round_boarder"
        android:layout_margin="5dp"
        />

    <ImageView
        android:id="@+id/my_store_list_store_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/my_store_list_store_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        >

        <TextView
            android:id="@+id/my_store_list_store_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title : dddd"
            android:textSize="13sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/my_store_list_store_createdAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="createdAt : 2020-02-22"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:singleLine="true"
            />

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>